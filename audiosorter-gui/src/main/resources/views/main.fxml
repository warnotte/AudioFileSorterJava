<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.warnotte.audiosorter.gui.MainController">

    <!-- Header -->
    <top>
        <VBox spacing="5" style="-fx-background-color: -color-bg-subtle; -fx-border-color: -color-border-default; -fx-border-width: 0 0 1 0;">
            <padding><Insets top="15" right="20" bottom="15" left="20"/></padding>
            <Label text="AudioFilesSorter" styleClass="title-1" style="-fx-text-fill: -color-accent-emphasis;"/>
            <Label text="Scan and organize your music collection" styleClass="text-muted"/>
        </VBox>
    </top>

    <!-- Main content -->
    <center>
        <VBox spacing="20">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

            <!-- Mode selection -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Mode:" styleClass="text-bold"/>
                <RadioButton fx:id="scanModeRadio" text="Scan only (generate reports)" selected="true">
                    <toggleGroup><ToggleGroup fx:id="modeGroup"/></toggleGroup>
                </RadioButton>
                <RadioButton fx:id="sortModeRadio" text="Sort (scan + copy files)">
                    <toggleGroup><fx:reference source="modeGroup"/></toggleGroup>
                </RadioButton>
                <RadioButton fx:id="coverArtModeRadio" text="Cover Art (extract missing covers)">
                    <toggleGroup><fx:reference source="modeGroup"/></toggleGroup>
                </RadioButton>
            </HBox>

            <!-- Source folder -->
            <VBox spacing="5">
                <Label text="Source folder:" styleClass="text-bold"/>
                <HBox spacing="10">
                    <TextField fx:id="sourceFolderField" promptText="Select music folder to scan..." HBox.hgrow="ALWAYS"/>
                    <Button text="Browse..." onAction="#browseSourceFolder"/>
                </HBox>
            </VBox>

            <!-- Destination folder (only for sort mode) -->
            <VBox fx:id="destFolderBox" spacing="5" managed="false" visible="false">
                <Label text="Destination folder:" styleClass="text-bold"/>
                <HBox spacing="10">
                    <TextField fx:id="destFolderField" promptText="Select destination for sorted files..." HBox.hgrow="ALWAYS"/>
                    <Button text="Browse..." onAction="#browseDestFolder"/>
                </HBox>
            </VBox>

            <!-- Options -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <CheckBox fx:id="openReportCheckbox" text="Open report when done" selected="true"/>
                <CheckBox fx:id="onlineSearchCheckbox" text="Search MusicBrainz for missing covers" managed="false" visible="false"/>
            </HBox>

            <!-- Action buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="startButton" text="Start Scan" onAction="#startOperation" styleClass="accent" prefWidth="150"/>
                <Button fx:id="cancelButton" text="Cancel" onAction="#cancelOperation" styleClass="danger" prefWidth="100" disable="true"/>
            </HBox>

            <!-- Progress section -->
            <VBox fx:id="progressBox" spacing="10" style="-fx-background-color: -color-bg-subtle; -fx-background-radius: 8; -fx-padding: 15;">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label fx:id="progressLabel" text="Ready"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="progressPercent" text=""/>
                </HBox>
                <ProgressBar fx:id="progressBar" progress="0" maxWidth="Infinity"/>
                <Label fx:id="currentItemLabel" text="" styleClass="text-muted, text-small"/>
            </VBox>

            <!-- Statistics -->
            <TitledPane fx:id="statsPane" text="Statistics" expanded="false">
                <GridPane hgap="20" vgap="8">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <Label text="Directories scanned:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label fx:id="statsDirsScanned" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="text-bold"/>
                    <Label text="Audio files found:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <Label fx:id="statsAudioFiles" text="0" GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="text-bold"/>

                    <Label text="OK:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label fx:id="statsDirsOk" text="0" styleClass="text-bold, success" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label text="Missing tags:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <Label fx:id="statsMissingTags" text="0" styleClass="text-bold, warning" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Errors:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label fx:id="statsErrors" text="0" styleClass="text-bold, danger" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Label text="Duplicates:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <Label fx:id="statsDuplicates" text="0" styleClass="text-bold, warning" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                </GridPane>
            </TitledPane>

            <!-- Log area -->
            <VBox VBox.vgrow="ALWAYS" spacing="5">
                <Label text="Log:" styleClass="text-bold"/>
                <TextArea fx:id="logArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: -color-bg-subtle; -fx-border-color: -color-border-default; -fx-border-width: 1 0 0 0;">
            <padding><Insets top="10" right="20" bottom="10" left="20"/></padding>
            <Button text="Open Reports Folder" onAction="#openReportsFolder" styleClass="flat"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Theme:" styleClass="text-muted"/>
            <ComboBox fx:id="themeComboBox" onAction="#changeTheme"/>
            <Label text="v0.2.0" styleClass="text-muted, text-small"/>
        </HBox>
    </bottom>

</BorderPane>
